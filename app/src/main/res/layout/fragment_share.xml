<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollView1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@android:color/darker_gray"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="We are happy to help you.."
            android:paddingLeft="10dp"
            android:textSize="30sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/email"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Contact us on click:"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/emaild"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:clickable="true"
            android:hint="55656678686"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="italic" />


        <TextView
            android:id="@+id/mobile"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Email Us:"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/mobiled"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="myapp.com"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="italic" />


        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Visit us:"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="mysore,karnataka"
            android:paddingLeft="5dp"
            android:textSize="25sp"
            android:textStyle="italic" />

    </LinearLayout>


</ScrollView>